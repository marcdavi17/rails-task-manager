<h1>Index</h1>
<ul>
  <% @tasks.each do |task| %>
     <div class="form-check d-flex mb-3">
      <input class="form-check-input" type="checkbox" <%= task.completed ? "checked" : "" %> value="" id="flexCheckDefault">
      <label class="form-check-label" for="flexCheckDefault">
        <%= link_to task.title, task_path(task) %>
      </label>
        <%= link_to ('<i class="fa-solid fa-trash"></i>').html_safe, task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </div>
  <% end %>
</ul>
